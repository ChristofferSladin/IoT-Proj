<Window x:Class="PetFeeder.Device.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetFeeder.Device"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350">
    <Grid>
        <Label Name="ConnStatus" VerticalAlignment="Center" HorizontalAlignment="Left" Width="35"></Label>
        <Button Content="Feed Pet" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Click="FeedPet_Click"/>
        <ComboBox Name="petTypeComboBox" VerticalAlignment="Top" HorizontalAlignment="Right" SelectionChanged="PetTypeComboBox_SelectionChanged"/>
        <Label Name="statusLabel" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Slider Name="portionSizeSlider" VerticalAlignment="Center" HorizontalAlignment="Center" ValueChanged="PortionSizeSlider_ValueChanged"/>
    </Grid>
</Window>
