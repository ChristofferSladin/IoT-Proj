<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:IoT.ControlPanel.MVVM.ViewModels"
             x:DataType="viewModels:HomeViewModel"
             x:Class="IoT.ControlPanel.MVVM.Views.HomePage"
             Title="HomePage"
             Shell.NavBarIsVisible="False"
             >


    <Grid BackgroundColor="#1b1c21" RowDefinitions=".75*, .25*">
        <Image Grid.Row="0" Source="livingroom_unsplash.jpg" />
        <Button Grid.Row="1" Text="Get Started" VerticalOptions="Center" Command="{Binding GoToGetStartedPageCommand}"/>


    </Grid>
</ContentPage>