<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:IoT.ControlPanel.MVVM.ViewModels"
             x:DataType="viewModels:AllDevicesViewModel"             
             x:Class="IoT.ControlPanel.MVVM.Pages.AllDevicesPage"
             Title="All Devices"
             Shell.NavBarIsVisible="False">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource Black}"></toolkit:StatusBarBehavior>
    </ContentPage.Behaviors>

    <Grid Margin="10" VerticalOptions="Start" RowDefinitions="auto, *">

        <Button Grid.Row="0" Command="{Binding GoBackCommand}" Text="X" Style="{StaticResource Key=NavigationButton}" HorizontalOptions="End" VerticalOptions="Center"></Button>

        <VerticalStackLayout Grid.Row="1" VerticalOptions="Start">
            <Label Text="All Devices" FontSize="22"/>
            
        </VerticalStackLayout>

    </Grid>
</ContentPage>